<body id="body-sign-in">
	<div class="container">
		<h3>Sign In</h3>

		<div class="row">
			<%= form_tag('/sessions', method:'post') do %>
			  <div class="row">
				  <%= label_tag :username %>
			  </div>
			  <div class="row">
				  <div class="col-md-4 col-md-offset-4 buttons">
					  <%= text_field_tag :username, nil, :class => "form-control"  %>
				  </div>
			  </div>
			  <div class="row">
				  <%= label_tag :password %>
			  </div>
			  <div class="row">
				  <div class="col-md-4 col-md-offset-4 buttons">
					  <%= password_field_tag :password, nil, :class => "form-control" %>
				  </div>
			  </div>
			  <div class="col-md-4 col-md-offset-4 buttons">
				  <%= submit_tag 'Sign In', :class => "btn btn-block btn-lg btn-primary"%>
			  </div>
			<% end %>
		</div>
	</div>
</body>
